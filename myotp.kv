<MyGridLayout>
    objname : name
    objemail : email
    objphone : phone
    objotp   : otp

    GridLayout:
        cols:1
        size : root.width , root.height


        GridLayout:
            cols:2


            Label:

                text : "Name: "


            TextInput:
                id : name
                multiline : False

            Label:

                text: " Email "

            TextInput:
                id: email
                multiline : False

            Label:
                text: " Phone Number "

            TextInput:
                id: phone
                multiline : False







        Button:

            text: "Generate OTP"
            on_press : root.sendbtn()


        Label:
            text: " Enter OTP "

        TextInput:
            id: otp
            multiline : False

        Button:
            text: "Authenticate"
            on_press : root.authbtn()


